{
    "name": "him",
    "private": true,
    "version": "0.0.0",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite --mode development",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development PROT=3000 electron .",
        "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
        "electron:build": "vite build --mode electron && electron-builder --mac && electron-builder --win --x64"
    },
    "dependencies": {
        "@codemirror/lang-html": "^6.4.3",
        "@codemirror/lang-java": "^6.0.1",
        "@codemirror/lang-javascript": "^6.1.5",
        "@codemirror/lang-json": "^6.0.1",
        "@codemirror/theme-one-dark": "^6.1.1",
        "@highlightjs/vue-plugin": "^2.1.0",
        "@kangc/v-md-editor": "^2.3.15",
        "@material-ui/core": "^4.12.4",
        "@material-ui/icons": "^4.11.3",
        "@vicons/fluent": "^0.12.0",
        "@videojs-player/vue": "^1.0.0",
        "@vueuse/core": "^9.13.0",
        "axios": "^0.26.0",
        "codemirror": "^6.0.1",
        "highlight.js": "^11.5.0",
        "js-audio-recorder": "^1.0.7",
        "notistack": "^3.0.1",
        "pinia": "^2.0.13",
        "spark-md5": "^3.0.2",
        "uuid": "^9.0.0",
        "vue": "^3.2.25",
        "vue-codemirror": "^6.1.1",
        "vue-cropper": "^1.0.2",
        "vue-pdf-embed": "^1.1.5",
        "vue-router": "^4.0.12",
        "vue3-pdfjs": "^0.1.6",
        "webrtc-adapter": "^8.2.2"
    },
    "devDependencies": {
        "@vicons/antd": "^0.12.0",
        "@vicons/carbon": "^0.12.0",
        "@vicons/ionicons4": "^0.12.0",
        "@vicons/ionicons5": "^0.12.0",
        "@vitejs/plugin-vue": "^2.2.0",
        "@vitejs/plugin-vue-jsx": "^1.3.7",
        "concurrently": "^7.3.0",
        "cross-env": "^7.0.3",
        "electron": "^19.0.9",
        "electron-builder": "^23.1.0",
        "less": "^4.1.2",
        "less-loader": "^10.2.0",
        "naive-ui": "^2.33.3",
        "video.js": "^8.0.4",
        "vite": "^2.8.0",
        "vite-plugin-compression": "^0.5.1",
        "wait-on": "^6.0.1"
    },
    "build": {
        "appId": "com.hk.him",
        "productName": "HotKey IM",
        "copyright": "Copyright Â© 2022 HotKey IM",
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "build/icons/lumen-im-mac.png"
        },
        "win": {
            "icon": "build/icons/lumen-im-mac.png",
            "target": [
                {
                    "target": "nsis"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "build/icons/lumen-im-win.ico",
            "uninstallerIcon": "build/icons/lumen-im-win.ico",
            "installerHeaderIcon": "build/icons/lumen-im-win.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "lumeim-icon"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    }
}
